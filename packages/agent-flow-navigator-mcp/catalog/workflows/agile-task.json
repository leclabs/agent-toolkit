{
  "id": "agile-task",
  "name": "Agile Task",
  "description": "Simple workflow for general development tasks: analyze, implement, test, review.",
  "nodes": {
    "start": {
      "type": "start",
      "name": "Start",
      "description": "Task entry point"
    },
    "analyze": {
      "type": "task",
      "name": "Analyze",
      "description": "Understand requirements and plan approach",
      "agent": "flow:Planner",
      "emoji": "ðŸ“‹",
      "stage": "planning"
    },
    "implement": {
      "type": "task",
      "name": "Implement",
      "description": "Write the code or make changes",
      "agent": "flow:Developer",
      "emoji": "ðŸ”§",
      "stage": "development"
    },
    "test": {
      "type": "task",
      "name": "Test",
      "description": "Verify the implementation works correctly",
      "agent": "flow:Tester",
      "emoji": "ðŸ§ª",
      "stage": "verification"
    },
    "review": {
      "type": "gate",
      "name": "Review",
      "description": "Review code quality and correctness",
      "agent": "flow:Reviewer",
      "emoji": "ðŸ‘€",
      "stage": "verification",
      "maxRetries": 2,
      "config": {
        "scrutinyLevel": 2
      }
    },
    "lint_format": {
      "type": "gate",
      "name": "Lint & Format",
      "description": "Run lint and format checks. Auto-fix issues where possible.",
      "agent": "flow:Developer",
      "emoji": "ðŸ”§",
      "stage": "delivery",
      "maxRetries": 3
    },
    "commit": {
      "type": "task",
      "name": "Commit Changes",
      "description": "Commit all changes with a descriptive message",
      "agent": "flow:Developer",
      "emoji": "ðŸ”§",
      "stage": "delivery"
    },
    "end_success": {
      "type": "end",
      "result": "success",
      "name": "Complete",
      "description": "Task completed successfully"
    },
    "hitl_failed": {
      "type": "end",
      "result": "blocked",
      "escalation": "hitl",
      "name": "Needs Help",
      "description": "Task needs human intervention"
    }
  },
  "edges": [
    {
      "from": "start",
      "to": "analyze"
    },
    {
      "from": "analyze",
      "to": "implement"
    },
    {
      "from": "implement",
      "to": "test"
    },
    {
      "from": "test",
      "to": "review"
    },
    {
      "from": "review",
      "to": "implement",
      "on": "failed",
      "label": "Fix issues found in review"
    },
    {
      "from": "review",
      "to": "hitl_failed",
      "on": "failed",
      "label": "Too many review failures"
    },
    {
      "from": "review",
      "to": "lint_format",
      "on": "passed",
      "label": "Review passed, run lint checks"
    },
    {
      "from": "lint_format",
      "to": "commit",
      "on": "passed",
      "label": "Lint passes, commit changes"
    },
    {
      "from": "lint_format",
      "to": "implement",
      "on": "failed",
      "label": "Fix lint/format issues"
    },
    {
      "from": "lint_format",
      "to": "hitl_failed",
      "on": "failed",
      "label": "Lint issues persist"
    },
    {
      "from": "commit",
      "to": "end_success"
    },
    {
      "from": "hitl_failed",
      "to": "implement",
      "on": "passed",
      "label": "Human resolved issue, resume"
    }
  ]
}
